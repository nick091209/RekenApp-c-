<Window x:Class="RekenApplicatie.Rekenscherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rekenscherm" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="SpelerNaamTextBlock" FontSize="16" Margin="10" TextAlignment="Center"/>
            <TextBlock FontSize="16" Margin="10">Kies moeilijkheidsgraad:</TextBlock>
            <ComboBox x:Name="MoeilijkheidsgraadComboBox" Margin="10" Width="200">
                <ComboBoxItem Content="Makkelijk"/>
                <ComboBoxItem Content="Normaal"/>
                <ComboBoxItem Content="Moeilijk"/>
            </ComboBox>
            <Button x:Name="StartOefeningenButton" Content="Start" Width="100" Margin="10" Click="StartOefeningenButton_Click"/>
            <TextBlock x:Name="VraagTextBlock" FontSize="16" Margin="10"/>
            <TextBox x:Name="AntwoordTextBox" Margin="10" Width="100"/>
            <Button x:Name="AntwoordButton" Content="Antwoord" Margin="10" Width="100" Click="AntwoordButton_Click"/>
            <TextBlock x:Name="FeedbackTextBlock" FontSize="16" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
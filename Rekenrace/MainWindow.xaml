<Window x:Class="RekenApplicatie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welkom" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock FontSize="16" Margin="10" TextAlignment="Center">Voer je naam in:</TextBlock>
            <TextBox x:Name="NaamTextBox" Margin="10" Width="200" HorizontalAlignment="Center"/>
            <Button Content="Start" Width="100" HorizontalAlignment="Center" Margin="10" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>